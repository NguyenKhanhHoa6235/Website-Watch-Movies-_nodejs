    <title>Movie Design</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;

        }

        body {}

        .main {
            background: rgb(8 10 26);
        }

        .slider .img {
            box-sizing: border-box;
            height: 200px;
        }

        /* * * * * * * * * * * * * * * * * * * * * * * * * * *
* slideshow
*/
        .img-fluid {
            width: 100%;
            height: 384px;

        }



        /* * * * * * * * * * * * * * * * * * * * * * * * * * *
* Content
*/


        .container {
            top: 0;
            padding-right: 45px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }

        .img-responsive {
            width: 100%;
            height: 256px
        }

        .img-movie {
            position: relative;
            margin-top: 30px;
        }

        .see-movie {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100%;
            width: 100%;
            opacity: 0;
            transition: .5s ease;
            background-color: #9ea0a1;
        }

        .button-play {
            font-size: 100px;
            color: rgb(255, 255, 255);
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            text-align: center;
        }

        .see-movie:hover {
            opacity: 0.4;
        }

        .img-border {
            border: 1px solid rgb(75 85 99);
            border-radius: 4px;
            padding: 4px;
            width: 150px;
        }

        .title-movie {
            position: absolute;
            font-weight: 600;
            color: rgb(255, 255, 255);
            top: 17px;
            left: 15px;

        }

        .movie-list-title {
            border-left: solid 5px #ff0000;
            padding-left: 10px;
            margin-top: 30px;
            margin-bottom: 20px;
            color: rgb(255, 255, 255);

        }

        .information-movie {
            display: block;
            box-sizing: border-box;
            margin-top: 20px;
            margin-bottom: 40px;
            color: rgb(225, 225, 225);
        }

        .footer-img-movie {
            height: 51px;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            margin-top: 20px;
            position: absolute;
            bottom: 0px;
            border-left: 1px solid rgb(75 85 99);
            border-right: 1px solid rgb(75 85 99);
            border-bottom: 1px solid rgb(75 85 99);
            padding: 4px;
        }

        .heart {
            font-size: 22px;
            color: red;
            position: absolute;
            right: 15px;
            top: 14px;

        }




        /* * * * * * * * * * * * * * * * * * * * * * * * * * *
* slide-top-rated
*/
        .col-centered {
            float: none;
            margin: 0 auto;
        }

        .carousel-control {
            width: 8%;
            width: 0px;
        }

        .carousel-control.left,
        .carousel-control.right {
            margin-right: 40px;
            margin-left: 32px;
            background-image: none;
            opacity: 1;
        }

        .carousel-control>a>span {
            color: white;
            font-size: 29px !important;
        }

        .carousel-col {
            position: relative;
            min-height: 1px;
            padding: 15px;
            float: left;
        }

        .active>div {
            display: none;
        }

        .active>div:first-child {
            display: block;
        }


        .img-border-slide-top-rated {
            border: 1px solid rgb(75 85 99);
            border-radius: 4px;
            padding: 16px;
            width: 150px;
        }

        .see-rated {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100%;
            width: 100%;
            opacity: 0;
            transition: .5s ease;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .see-rated h3 {
            font-weight: 800px;
        }

        .see-rated:hover {
            opacity: 1;
        }

        .star-checked {
            color: orange;
        }

        .infomation-rating {

            color: rgb(255, 255, 255);
            position: absolute;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            text-align: center;
        }

        /*xs*/
        @media (max-width: 767px) {
            .carousel-inner .active.left {
                left: -100%;
            }

            .carousel-inner .active.right {
                left: 100%;
            }

            .carousel-inner .next {
                left: 100%;
            }

            .carousel-inner .prev {
                left: -100%;
            }

            .carousel-col {
                width: 100%;
            }


        }

        /*sm*/
        @media (min-width: 768px) and (max-width: 991px) {
            .carousel-inner .active.left {
                left: -50%;
            }

            .carousel-inner .active.right {
                left: 50%;
            }

            .carousel-inner .next {
                left: 50%;
            }

            .carousel-inner .prev {
                left: -50%;
            }

            .carousel-col {
                width: 50%;
            }

            .active>div:first-child+div {
                display: block;
            }
        }

        /*md*/
        @media (min-width: 992px) and (max-width: 1199px) {
            .carousel-inner .active.left {
                left: -33%;
            }

            .carousel-inner .active.right {
                left: 33%;
            }

            .carousel-inner .next {
                left: 33%;
            }

            .carousel-inner .prev {
                left: -33%;
            }

            .carousel-col {
                width: 33%;
            }

            .active>div:first-child+div {
                display: block;
            }

            .active>div:first-child+div+div {
                display: block;
            }
        }

        /*lg*/
        @media (min-width: 1200px) {
            .carousel-inner .active.left {
                left: -25%;
            }

            .carousel-inner .active.right {
                left: 25%;
            }

            .carousel-inner .next {
                left: 25%;
            }

            .carousel-inner .prev {
                left: -25%;
            }

            .carousel-col {
                width: 25%;
            }

            .active>div:first-child+div {
                display: block;
            }

            .active>div:first-child+div+div {
                display: block;
            }

            .active>div:first-child+div+div+div {
                display: block;
            }
        }
    </style>
</head>

<body>
    {{!-- ************MENU - NAVBAR************* --}}
    <div id="#nav-placeholder">
        {{> navbar }}
    </div>


    {{!-- ***********CONTENT************ --}}
    {{!-- 1. slideshow --}}
    {{!-- 2. main content: type movies --}}

    {{!-- 1. slideshow --}}
    <div class="container-fluid main">
        <div class="slider" style="width: 100%;">
            <div class="container-fluid">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="img-fluid"
                                src="https://static2.vieon.vn/vieplay-image/thumbnail_v4/2020/12/07/b1xxymmc_1920x1080nguoivetucoichet.jpg"
                                alt="" style="width: 100%;  height: 450px;  object-fit: cover;">
                        </div>

                        <div class="item">
                            <img class="img-fluid"
                                src="https://cdn.nguyenkimmall.com/images/detailed/817/thumbnails__3_.jpg" alt=""
                                style="width: 100%; height: 450px;  object-fit: cover;">
                        </div>

                        <div class="item">
                            <img class="img-fluid" src="https://i.imgur.com/Q66G8BY.jpg" alt=""
                                style="width: 100%; height: 450px;  object-fit: cover;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

        {{!-- 2. main content: type movies --}}
        {{!-- phim noi bat --}}
        <div class="container-fluid">
            <div class="container-fluid">
                <h3 class="movie-list-title" style="margin-top: 64px;">PHIM NỔI BẬT</h3>
                <div class="row">
                    {{#each movies}}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="img-movie">
                            <img class="img-fluid img-responsive img-border" style="width: 100%; height: 60%"
                                src={{this.image}} alt="">
                            <a class="see-movie img-responsive" href="/api/movies/detail/{{this._id}}">
                                <i class="button-play fas fa-caret-right"></i>
                            </a>
                            <div class="footer-img-movie">
                                <a class="title-movie" href="/api/movies/detail/{{this.id}}">{{this.name}}</a>
                                <label class="heart" for="heart-checkbox"><i class="fa fa-heart"></i></label>
                            </div>
                        </div>
                    </div>
                    {{/each}}

                    <hr style="margin: 80px;">
                </div>
                    {{!-- SLIDE TOP RATED --}}
                    <h3 class="movie-list-title" style="margin-top: 40px;">TOP RATED</h3>
                    <div class="container-fluid" style="margin-bottom: 100px;">
                        <div class="row">
                            <div id="carousel" class="carousel slide" data-ride="carousel" data-type="multi"
                                data-interval="2500">
                                <div class="carousel-inner">
                                    <div class="item active">
                                        {{#each movies}}
                                        <div class="carousel-col">
                                            <div class="img-movie ">
                                                <img class="img-fluid img-responsive img-border-slide-top-rated"
                                                    style="width: 100%; height: 60% " src={{this.image}} alt="">
                                                <a class="see-rated img-responsive"
                                                    href="/api/movies/detail/{{this._id}}">
                                                    <div class="infomation-rating">
                                                        <h2>{{this.name}}</h2>
                                                        <span class="fa fa-star star-checked"
                                                            style="font-size: 20px;"></span>
                                                        <span class="fa fa-star star-checked"
                                                            style="font-size: 20px;"></span>
                                                        <span class="fa fa-star star-checked"
                                                            style="font-size: 20px;"></span>
                                                        <span class="fa fa-star star-checked"
                                                            style="font-size: 20px;"></span>
                                                        <span class="fa fa-star star-checked"
                                                            style="font-size: 20px;"></span>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                    {{#each movies}}
                                    <div class="item">
                                        <div class="carousel-col">
                                            <div class="img-movie ">
                                                <img class="img-fluid img-responsive img-border-slide-top-rated"
                                                    style="width: 100%; height:60%"
                                                    src={{this.image}}
                                                    alt="">
                                                <a class="see-rated img-responsive" href="/api/movies/detail/{{this._id}}">
                                                    <div class="infomation-rating">
                                                        <h2>{{this.name}}</h2>
                                                        <span class="fa fa-star star-checked" style="font-size: 20px;"></span>
                                                        <span class="fa fa-star star-checked"style="font-size: 20px;"></span>
                                                        <span class="fa fa-star star-checked"style="font-size: 20px;"></span>
                                                        <span class="fa fa-star star-checked"style="font-size: 20px;"></span>
                                                        <span class="fa fa-star" style="font-size: 20px;"></span>
                                                    </div>
                                                </a>
                                            </div>  
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                                <!-- Controls -->
                                <div class="left carousel-control">
                                    <a href="#carousel" role="button" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </div>
                                <div class="right carousel-control">
                                    <a href="#carousel" role="button" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- **************MODAL****************** --}}
                    <!-- request login -->
                    <div class="modal fade" id="shopping-cartModal" role="dialog">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Giỏ hàng không hiển thị</h4>
                                </div>
                                <div class="modal-body">
                                    <p>Bạn cần đăng nhập để sử dụng tính năng này.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="bell-Modal" role="dialog">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Mục thông báo không hiển thị</h4>
                                </div>
                                <div class="modal-body">
                                    <p>Bạn cần đăng nhập để sử dụng tính năng này.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            <div id="#nav-placeholder">
                {{> footer }}
            </div>

            <script>
                $('.carousel[data-type="multi"] .item').each(function () {
                    var next = $(this).next();
                    if (!next.length) {
                        next = $(this).siblings(':first');
                    }
                    next.children(':first-child').clone().appendTo($(this));

                    for (var i = 0; i < 2; i++) {
                        next = next.next();
                        if (!next.length) {
                            next = $(this).siblings(':first');
                        }

                        next.children(':first-child').clone().appendTo($(this));
                    }
                });
            </script>
</body>

